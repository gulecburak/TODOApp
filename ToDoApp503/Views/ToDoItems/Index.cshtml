@model IEnumerable<ToDoApp503.Models.ToDoItem>
@{
    ViewBag.Title = "Yapılacaklar Listesi";
}

<h2>Yapılacaklar Listesi</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create", null, new { @class = "btn btn-primary" })
    <a class="dt-button buttons-excel buttons-html5 btn yellow btn-outline" tabindex="0" aria-controls="sample_1" style="float:right;" href="@Url.Action("ExportToExcel","ToDoItems")"><span>Excel Aktar</span></a>
    <a class="dt-button buttons-pdf buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample_1" style="float:right;" href="@Url.Action("ExportToCsv","ToDoItems")"><span>Csv Aktar</span></a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap all">@Html.DisplayNameFor(x => x.Title)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Category)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Customer)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Department)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Manager)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Organizator)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Side)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Description)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Status)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Attachment)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.MeetingDate)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.PlannedDate)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.FinishDate)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.ReviseDate)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.ConversationSubject)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.SupporterCompany)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.SupporterDoctor)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.ConversationAttendeeCount)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.ScheduleOrganizationDate)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.MailingSubject)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.PosterSubject)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.PosterCount)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.Elearning)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.TypesOfScans)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.AsoCountInScans)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.TypesOfOrganization)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.AsoCountInOrganization)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.TypeOfVaccinationOrganization)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.AsoCountInVaccinationOrganization)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.AmountOfCompensationForPoster)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.CorporateProductivityReport)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.CreateDate)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.CreatedBy)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.UpdateDate)</th>
            <th class="text-nowrap">@Html.DisplayNameFor(x => x.UpdatedBy)</th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Customer.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Department.DepartmentName)</td>
                <td>@Html.DisplayFor(modelItem => item.Manager.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.Organizator.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.Side.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Attachment)</td>
                <td>@Html.DisplayFor(modelItem => item.MeetingDate)</td>
                <td>@Html.DisplayFor(modelItem => item.PlannedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.FinishDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ReviseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ConversationSubject)</td>
                <td>@Html.DisplayFor(modelItem => item.SupporterCompany)</td>
                <td>@Html.DisplayFor(modelItem => item.SupporterDoctor)</td>
                <td>@Html.DisplayFor(modelItem => item.ConversationAttendeeCount)</td>
                <td>@Html.DisplayFor(modelItem => item.ScheduleOrganizationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.MailingSubject)</td>
                <td>@Html.DisplayFor(modelItem => item.PosterSubject)</td>
                <td>@Html.DisplayFor(modelItem => item.PosterCount)</td>
                <td>@Html.DisplayFor(modelItem => item.Elearning)</td>
                <td>@Html.DisplayFor(modelItem => item.TypesOfScans)</td>
                <td>@Html.DisplayFor(modelItem => item.AsoCountInScans)</td>
                <td>@Html.DisplayFor(modelItem => item.TypesOfOrganization)</td>
                <td>@Html.DisplayFor(modelItem => item.AsoCountInOrganization)</td>
                <td>@Html.DisplayFor(modelItem => item.TypeOfVaccinationOrganization)</td>
                <td>@Html.DisplayFor(modelItem => item.AsoCountInVaccinationOrganization)</td>
                <td>@Html.DisplayFor(modelItem => item.AmountOfCompensationForPoster)</td>
                <td>@Html.DisplayFor(modelItem => item.CorporateProductivityReport)</td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdateDate)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedBy)</td>
                <td class="text-nowrap">
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Ayrıntılar", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
